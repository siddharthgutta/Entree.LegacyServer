{
  "extends": "airbnb",
  "plugins": [
    "react",
    "mocha"
  ],
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "mocha/no-exclusive-tests": 2,
    "comma-dangle": [
      2,
      "never"
    ],
    "object-curly-spacing": [
      2,
      "never"
    ],
    "object-shorthand": [
      2,
      "always"
    ]
  },
  "ecmaFeatures": {
    "objectLiteralShorthandProperties": true,
    "spread": true
  }
}