<?xml version='1.0' encoding='utf-8'?>
<widget id="com.entreeapp.producer" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Entree</name>
    <description>Order Ahead With SMS</description>
    <author email="team@textentree.co" href="https://textentree.com">Apache Cordova Team</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/images/app-icons/Icon-ldpi.png" density="ldpi" />
        <icon src="www/images/app-icons/Icon-mdpi.png" density="mdpi" />
        <icon src="www/images/app-icons/Icon-hdpi.png" density="hdpi" />
        <icon src="www/images/app-icons/Icon-xhdpi.png" density="xhdpi" />
        <icon src="www/images/app-icons/Icon-xxhdpi.png" density="xxhdpi" />
        <icon src="www/images/app-icons/Icon-xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <preference name="fullscreen" value="false" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="www/images/app-icons/Icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="www/images/app-icons/Icon-60.png" width="60" height="60" />
        <icon src="www/images/app-icons/Icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="www/images/app-icons/Icon-76.png" width="76" height="76" />
        <icon src="www/images/app-icons/Icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="www/images/app-icons/Icon-40.png" width="40" height="40" />
        <icon src="www/images/app-icons/Icon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="www/images/app-icons/Icon.png" width="57" height="57" />
        <icon src="www/images/app-icons/Icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="www/images/app-icons/Icon-72.png" width="72" height="72" />
        <icon src="www/images/app-icons/Icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="www/images/app-icons/Icon-Small.png" width="29" height="29" />
        <icon src="www/images/app-icons/Icon-Small@2x.png" width="58" height="58" />
        <icon src="www/images/app-icons/Icon-Small@3x.png" width="87" height="87" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="www/images/app-icons/Icon-Small-50.png" width="50" height="50" />
        <icon src="www/images/app-icons/Icon-Small-50@2x.png" width="100" height="100" />
    </platform>
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <engine name="ios" spec="~4.1.1" />
    <engine name="android" spec="~5.1.1" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="~0.8.4" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.0" />
    <plugin name="cordova-plugin-background-mode" spec="~0.6.5" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.1" />
    <plugin name="cordova-plugin-device" spec="~1.1.1" />
</widget>
